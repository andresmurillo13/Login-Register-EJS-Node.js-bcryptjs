<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
     crossorigin="anonymous">
     <link rel="stylesheet" href="../public/css/style.css">

    <title>EMPLEADOS</title>
</head>
<body>

  <%- include("./templates/navbar.ejs")  %> 
      <section class="section1">
    <div class="container mt-5">
        <div class="row">
          <div class="col-md-7">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td>n°</td>
                  <td>Nombre Completo</td>
                  <td>Correo Electronico</td>
                  <td>Contraseña</td>
                  <td>Rol</td>
                  <td>Opciones</td>
                </tr>
              </thead>
              <tbody>
                <% if (data) { %>
                  <% for(var i = 0; i < data.length; i++) { %>
                    <tr>
                      <td><%= (i + 1) %></td>
                      <td><%= data[i].nombre_completo %></td>
                      <td><%= data[i].correo_electronico %></td>
                      <td><%= data[i].contraseña_empleado %></td>
                      <td><%= data[i].rol_empleado %></td>
                      <td>
                        <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                        <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                      </td>
                    </tr>
                  <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </section>
        <section  class="section2">
          <div class="col-md-5">
            <div class="card-body">
      
              <form action="/add" method="POST">
                <div class="form-group">
                  <input type="text" name="nombre_completo" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                  <input type="email" name="correo_electronico" placeholder="email" class="form-control">
                </div>
                <div class="form-group">
                  <input type="password" name="contraseña_empleado" placeholder="contraseña" class="form-control">
                </div>
                <div class="form-group">
                  <input type="text" name="rol_empleado" placeholder="Rol" class="form-control">
                </div>
      
                <button type="submit" class="btn btn-primary">
                  Guardar Empleado
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

</body>
</html>